# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_STREAM_KEY=niru_ingestion_stream
REDIS_CONSUMER_GROUP=niru_processing_group
REDIS_DLQ_KEY=niru_processing_dlq
REDIS_MAX_RETRIES=3

# PostgreSQL Configuration (Neon.tech)
DATABASE_URL=postgresql://user:password@ep-xyz.aws.neon.tech/sautisense?sslmode=require
DB_POOL_MIN_SIZE=2
DB_POOL_MAX_SIZE=10
DB_TIMEOUT=30

# Qdrant Configuration (Cloud)
QDRANT_URL=https://xyz-example.eu-central.aws.cloud.qdrant.io:6333
QDRANT_API_KEY=your-api-key-here
QDRANT_COLLECTION=amaniquery_sense
QDRANT_BATCH_SIZE=100

# MinIO/S3 Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=miniopassword123
MINIO_SECURE=false
MINIO_BUCKET=bronze-raw

# Model Configuration (HuggingFace)
# No need to change these unless you want to use different models
MODEL_EMBEDDING=nomic-ai/nomic-embed-text-v1.5
MODEL_LANGUAGE=papluca/xlm-roberta-base-language-detection
MODEL_SLANG=google/flan-t5-base
MODEL_TOPIC=MoritzLaurer/mDeBERTa-v3-base-mnli-xnli
MODEL_NER=Davlan/xlm-roberta-base-ner-hrl
MODEL_SENTIMENT=lxyuan/distilbert-base-multilingual-cased-sentiments-student
MODEL_EMOTION=j-hartmann/emotion-english-distilroberta-base
MODEL_BIAS=MoritzLaurer/mDeBERTa-v3-base-mnli-xnli
MODEL_SUMMARIZER=google/mt5-small

# Agent Configuration
AGENT_TIMEOUT=30
AGENT_MAX_RETRIES=2
TOPIC_CONFIDENCE_THRESHOLD=0.4
ENTITY_CONFIDENCE_THRESHOLD=0.7
BIAS_THRESHOLD=0.5

# Processing Configuration
BATCH_SIZE=1
MAX_TEXT_LENGTH=10000
ENABLE_PARALLEL_AGENTS=true

# Logging Configuration
LOG_LEVEL=INFO

# Health Check Configuration
HEALTH_CHECK_PORT=8000
ENABLE_HEALTH_CHECKS=true

# Environment
ENVIRONMENT=production
DEBUG=false
