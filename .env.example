# AmaniQuery Configuration

# Database Settings
CHROMA_DB_PATH=./data/chroma_db
VECTOR_DB_TYPE=chroma  # Options: chroma, faiss

# Embedding Settings
EMBEDDING_MODEL=all-MiniLM-L6-v2
CHUNK_SIZE=800
CHUNK_OVERLAP=100
MAX_CHUNKS_PER_DOC=100

# LLM Settings
LLM_PROVIDER=moonshot  # Options: openai, anthropic, moonshot, local
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here
MOONSHOT_API_KEY=your-moonshot-api-key-here
MOONSHOT_BASE_URL=https://api.moonshot.cn/v1
DEFAULT_MODEL=moonshot-v1-8k
MAX_TOKENS=1500
TEMPERATURE=0.7

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8000,http://frontend:3000,https://amaniquery.vercel.app,https://api-amaniquery.vercel.app

# Frontend Settings (for Docker)
NEXT_PUBLIC_API_URL=http://localhost:8000

# PostgreSQL Database (for data upload script)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=amaniquery
DB_USER=postgres
DB_PASSWORD=your_password_here

# Docker Database Settings
DATABASE_URL=postgresql://amaniquery:amaniquery_password@postgres:5432/amaniquery
CHROMA_HOST=chroma
CHROMA_PORT=8000

# Crawler Settings
DOWNLOAD_DELAY=2.5  # Seconds between requests
CONCURRENT_REQUESTS=8
USER_AGENT=AmaniQuery/1.0 (+https://github.com/yourrepo/amaniquery)
ROBOTSTXT_OBEY=True

# Data Paths
RAW_DATA_PATH=./data/raw
PROCESSED_DATA_PATH=./data/processed
EMBEDDINGS_PATH=./data/embeddings

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR
LOG_FILE=./logs/amaniquery.log

# Scheduling
CRAWL_NEWS_SCHEDULE=daily  # Options: hourly, daily, weekly
CRAWL_PARLIAMENT_SCHEDULE=weekly
CRAWL_LAWS_SCHEDULE=monthly

# Source-Specific Settings
KENYA_LAW_BASE_URL=http://kenyalaw.org
PARLIAMENT_BASE_URL=https://www.parliament.go.ke

# RSS Feed URLs (comma-separated)
NEWS_RSS_FEEDS=https://nation.africa/rss,https://www.standardmedia.co.ke/rss,https://www.the-star.co.ke/rss
GLOBAL_RSS_FEEDS=https://www.reuters.com/technology/rss,https://techcrunch.com/feed/,https://www.aljazeera.com/xml/rss/all.xml

# Performance
MAX_WORKERS=4
BATCH_SIZE=50
CACHE_ENABLED=True
CACHE_TTL=3600  # seconds

# SMS Pipeline
AT_USERNAME=your_africastalking_username
AT_API_KEY=your_africastalking_api_key 

# Cloud Databases
ELASTICSEARCH_URL=https://your-elasticsearch-cloud-url:9243
ELASTICSEARCH_API_KEY=your-elasticsearch-api-key

UPSTASH_VECTOR_URL=https://your-upstash-vector-url
UPSTASH_VECTOR_TOKEN=your-upstash-vector-token

UPSTASH_REDIS_URL=rediss://your-upstash-redis-url:6379
UPSTASH_REDIS_TOKEN=your-upstash-redis-token

QDRANT_URL=https://your-qdrant-cloud-url:6333
QDRANT_API_KEY=your-qdrant-api-key

# Encryption for API Keys
CONFIG_ENCRYPTION_KEY=your-32-character-encryption-key

SERPAPI_API_KEY=

# VibeVoice TTS Configuration (Voice Module)
VIBEVOICE_MODEL_PATH=microsoft/VibeVoice-Realtime-0.5B
VIBEVOICE_DEVICE=auto  # Options: auto, cuda, mps, cpu
VIBEVOICE_VOICE=Wayne  # Default voice preset
VIBEVOICE_CFG_SCALE=1.5  # Classifier-free guidance scale (1.0-2.0)

# WeKnora Integration (Tencent RAG Framework)
# Start WeKnora with: docker-compose --profile weknora up
WEKNORA_ENABLED=true
WEKNORA_API_URL=http://localhost:8081/api/v1
# API key is auto-generated after first registration in WeKnora Web UI
# Get it from browser dev tools (Network > Headers > X-API-Key)
WEKNORA_API_KEY=
WEKNORA_KNOWLEDGE_BASE_ID=kb-00000001

